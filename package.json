{
  "name": "xg2huo",
  "version": "0.1.0",
  "private": true,
  "description": "Localized classifieds marketplace - Turbo monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^2.0.0"
  },
  "packageManager": "npm@10.8.2",
  "overrides": {
    "glob": "^10.5.0",
    "globby": "^11.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
